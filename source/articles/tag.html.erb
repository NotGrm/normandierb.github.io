<% content_for :breadcrumb do %>
  <%= link_to "Accueil", "/" %>
  »
  <%= link_to "Articles", "/articles/index.html" %>
  »
  <%= link_to "Tags", "/articles/tags.html" %>
  »
  <%= tagname %>
<% end %>
<h2>Articles taggés "<%= tagname %>"</h2>

<% page_articles.each do |article| %>
  <article>
    <h3><%= link_to article.title, article %><h3>
    <h4>Le <%= I18n.l article.date.to_date, format: :long %> par <%= link_to article.data.author, "/profiles/#{article.data.author_slug}.html" %></h4>
    <%= article.summary(50) %>
    <h5>Tags : <%= article.tags.map{ |tag| link_to(tag, tag_path(tag, 'articles'))}.join(" | ") %></h5>
    <hr />
  </article>
<% end %>
